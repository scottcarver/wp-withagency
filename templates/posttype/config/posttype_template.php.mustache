// Register Custom Post Type
function custom_posttype_{{posttypeSlug}}() {

	$labels = array(
		'name'                => _x( '{{posttypeLabelPlural}}', 'Post Type General Name', '{{namespace}}' ),
		'singular_name'       => _x( '{{posttypeLabelSingle}}', 'Post Type Singular Name', '{{namespace}}' ),
		'menu_name'           => __( '{{posttypeLabelPlural}}', '{{namespace}}' ),
		'parent_item_colon'   => __( 'Parent {{posttypeLabelSingle}}:', '{{namespace}}' ),
		'all_items'           => __( 'All {{posttypeLabelPlural}}', '{{namespace}}' ),
		'view_item'           => __( 'View {{posttypeLabelPlural}}', '{{namespace}}' ),
		'add_new_item'        => __( 'Add New {{posttypeLabelSingle}}', '{{namespace}}' ),
		'add_new'             => __( 'Add New', '{{namespace}}' ),
		'edit_item'           => __( 'Edit {{posttypeLabelSingle}}', '{{namespace}}' ),
		'update_item'         => __( 'Update {{posttypeLabelSingle}}', '{{namespace}}' ),
		'search_items'        => __( 'Search {{posttypeLabelPlural}}', '{{namespace}}' ),
		'not_found'           => __( 'Not found', '{{namespace}}' ),
		'not_found_in_trash'  => __( 'Not found in Trash', '{{namespace}}' ),
	);
	$rewrite = array(
		'slug'                => '{{posttypeLabelPlural}}',
		'with_front'          => true,
		// 'pages'               => true,
		// 'feeds'               => true,
	);
	$args = array(
		'label'               => __( '{{posttypeLabelSingle}}', '{{namespace}}' ),
		'description'         => __( '{{posttypeLabelSingle}} Description', '{{namespace}}' ),
		'labels'              => $labels,
		'supports'            => array( 'title','editor','custom-fields'),
		'taxonomies'          => array(),
		'hierarchical'        => false,
		'public'              => true,
		'show_ui'             => true,
		'show_in_menu'        => true,
		'show_in_nav_menus'   => true,
		'show_in_admin_bar'   => true,
		'menu_position'       => 4,
		'menu_icon'           => 'dashicons-clock',
		// 'menu_icon' => 'data:image/svg+xml;base64,' . base64_encode('<svg width="20" height="20" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path fill="black" d="M1591 1448q56 89 21.5 152.5t-140.5 63.5h-1152q-106 0-140.5-63.5t21.5-152.5l503-793v-399h-64q-26 0-45-19t-19-45 19-45 45-19h512q26 0 45 19t19 45-19 45-45 19h-64v399zm-779-725l-272 429h712l-272-429-20-31v-436h-128v436z"/></svg>'),
		'can_export'          => true,
		'has_archive'         => false,
		'exclude_from_search' => true,
		'publicly_queryable'  => true,
		'show_in_rest' 		  => true,
		'rewrite'             => $rewrite,
		'capability_type'     => 'post',
	);
	register_post_type( '{{posttypeSlug}}', $args );

}

// Hook into the 'init' action
add_action( 'init', 'custom_posttype_{{posttypeSlug}}', 0 );




